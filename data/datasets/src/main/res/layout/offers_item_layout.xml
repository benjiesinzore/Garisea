<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15dp">

        <LinearLayout android:orientation="vertical"
            android:background="@color/grayPrimary"
            android:layout_width="match_parent"
            android:padding="@dimen/_20sp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/offers_title"
                android:textSize="@dimen/_20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"/>

            <TextView
                android:id="@+id/offers_valid"
                android:textSize="@dimen/_20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valid"/>

            <TextView
                android:id="@+id/offers_description"
                android:textSize="@dimen/_15sp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>